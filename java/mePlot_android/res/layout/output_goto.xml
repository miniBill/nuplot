<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<TableLayout android:id="@+id/goto_table"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<TableRow android:id="@+id/goto_row1" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:text="x" android:id="@+id/goto_labelx"
				android:paddingLeft="20dip" android:paddingRight="20dip" />
			<EditText android:layout_weight="1" android:id="@+id/goto_x"
				android:inputType="numberSigned|numberDecimal" />
		</TableRow>
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Spinner android:id="@+id/goto_spinner" android:layout_span="2"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_width="fill_parent" />
		</TableRow>
		<TableRow android:id="@+id/goto_row2" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:text="y" android:id="@+id/goto_labely"
				android:paddingLeft="20dip" android:paddingRight="20dip" />
			<EditText android:layout_weight="1" android:id="@+id/goto_y"
				android:inputType="numberSigned|numberDecimal" />
		</TableRow>
	</TableLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dip" android:id="@+id/goto_ok" android:text="@string/command_ok" />
		<Button android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dip" android:id="@+id/goto_cancel"
			android:text="@string/command_cancel" />
	</LinearLayout>
</LinearLayout>